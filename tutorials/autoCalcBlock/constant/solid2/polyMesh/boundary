FoamFile
{
    version     2.0;
    format      ascii;
    class       polyBoundaryMesh;
    location    "constant/solid2/polyMesh";
    object      boundary;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

2
(
    solid2_to_solid1
    {
        type            mappedWall;
        inGroups        1(wall);
        nFaces          100;
        startFace       2700;
        sampleMode      nearestPatchFace;
        sampleRegion    solid1;
        samplePatch     solid1_to_solid2;
    }
    solid2_to_FLUID1
    {
        type            mappedWall;
        inGroups        1(wall);
        nFaces          500;
        startFace       2800;
        sampleMode      nearestPatchFace;
        sampleRegion    FLUID1;
        samplePatch     FLUID1_to_solid2;
    }
)

