FoamFile
{
    version     2.0;
    format      ascii;
    class       polyBoundaryMesh;
    location    "constant/solid1/polyMesh";
    object      boundary;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

2
(
    solid1_to_solid2
    {
        type            mappedWall;
        inGroups        1(wall);
        nFaces          100;
        startFace       2700;
        sampleMode      nearestPatchFace;
        sampleRegion    solid2;
        samplePatch     solid2_to_solid1;
    }
    solid1_to_FLUID
    {
        type            mappedWall;
        inGroups        1(wall);
        nFaces          500;
        startFace       2800;
        sampleMode      nearestPatchFace;
        sampleRegion    FLUID;
        samplePatch     FLUID_to_solid1;
    }
)

