config
{
    elementLength   0.004;
    d               0.02;
    fluidDistance   ( ( $d $d $d ) ( $d $d $d ) );
    elementGradient 1.2;
    open            yes;
    gravity         ( 0 0 -9.81 );
    radiation
    {
        model           fvDOM;
        frequency       20;
    }
    temperature
    {
        start       293.15;
        min         $start;
        max         500;
    }
    inlet
    {
        velocity        ( 0 0 0 );
        temperature     293.15;
    }
    #include "geometryDict"
}

