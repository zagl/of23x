FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Remove regions with a small number of cells.
// Specify minimum region size by number of cells or
// relative in relation to overall mesh size.
relativeSize        true;
minRegionSize       0.02;

regions
{
    topAir
    {
        selectionMode   point;
        selectionPoints ( ( 1 1 1 ) );
        mergeRegions    true;
        remove          false;
    }

    bottomAir
    {
        selectionMode   residual;
        mergeRegions    true;
        remove          false;
    }
}

