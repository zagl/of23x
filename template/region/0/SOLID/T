FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "./system/configDict"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $:config.temperature.start;

boundaryField
{
    emptyWall
    {
        type        zeroGradient;
        value       $internalField; 	
    }
    radBaffle
    {
        type        compressible::turbulentTemperatureRadCoupledMixed;
        Tnbr        T; 	
        kappa       solidThermo; 	
        kappaName   none; 	
        value       $internalField; 
        Qr          none; 	
        QrNbr       Qr; 		
    } 	
    coupledBaffle
    {
        type        compressible::turbulentTemperatureCoupledBaffleMixed;
        Tnbr        T;
        kappa       solidThermo;
        kappaName   none;
        value       $internalField;
    }
}

